#include <iostream>
using std::cin;
using std::cout;
using std::endl;
int main(){
    cout<< "Type base and exponent in order: "<< endl;
    int base, exponent, flag=1;
    double result=1;
    cin>>base>>exponent;
    if(exponent==0){
        if(base==0){
            cout<< base << " to the power of "<<exponent<< " is not defined"<<endl;
            return 1;
        }
        else{
            cout<< base << " to the power of "<<exponent<< " is: "<<result<<endl;
            return 0;
        }
    }
    if(exponent<0){
        flag=0;
        exponent=-exponent;
    }
    for(int i=0;i<exponent;++i){
        result*=base;
    }
    if(flag==1){
        cout<< base << " to the power of "<<exponent<< " is: "<<result<<endl;
    }
    else{
        cout<< base << " to the power of "<<-exponent<< " is: "<<1/result<<endl;
    }
    return 0;
}
