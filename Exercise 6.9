#include <iostream>
#include <string>
#include <vector>
using std::cout;
using std::cin;
using std::endl;
using std::string;
using std::vector;

int main(){
    string someTxt, line;
    cout << "enter some text" << endl;
    while(getline(cin,line)){
        someTxt+='\n'+line;
    }
    int ffCnt=0, flCnt=0, fiCnt=0;
    for(string::size_type i=0; i!=someTxt.size()-1; i++){
        if(someTxt[i]=='f'){
            switch (someTxt[i+1])
            {
            case 'f':
                ++ffCnt;
                break;
            case 'l':
                ++flCnt;
                break;
            case 'i':
                ++fiCnt;
                break;
            default:
                break;
            }
        }
    }
    cout<< "ff, fl, and fi counts are " << ffCnt<<", "<< flCnt << ", and " << fiCnt << ", respectively." << endl;
    return 0;
}
