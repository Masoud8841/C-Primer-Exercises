#include <iostream>
#include<vector>
using std::cout;
using std::cin;
using std::endl;
using std::string;
using std::vector;
int main(){
    vector<int> ivec;
    int num;
    cout<< "enter a sequence of integers:"<<endl;
    while(cin>>num)
        ivec.push_back(num);
    cout<< "The vector contains "<< ivec.size() << " elements."<<endl;
    for(vector<int>::const_iterator iter=ivec.begin();iter!=ivec.end();++iter){
        num=*iter;
        ++iter;
        if(iter==ivec.end()){
            break;
        }
        else{
            cout<< num+(*iter) << endl;
        }
    }
    if(ivec.size()%2==1){
        cout<< "The vector contains an odd number of elements." << endl;
        cout<< "The last element is: "<< *(ivec.end()-1) << endl;
    }
    vector<int>::const_iterator iterRight=ivec.end();
    for(vector<int>::const_iterator iterLeft=ivec.begin();iterLeft!=iterRight && (iterLeft+1)!=iterRight;++iterLeft){
        --iterRight;
        cout << *iterLeft+(*iterRight) <<endl;
    }
    if(ivec.size()%2==1){
        cout<< "The vector contains an odd number of elements." << endl;
        cout<< "The middle element is: "<< *(ivec.begin()+ivec.size()/2) << endl;
    }
    return 0;
}
