#include <iostream>
#include <ctype.h>
#include <vector>
using std::cout;
using std::cin;
using std::endl;
using std::string;
using std::vector;
int main(){
    vector<string> textVec;
    string word;
    cout<< "enter your text"<<endl;
    while(cin>>word){
        textVec.push_back(word);
    }
    for(vector<string>::size_type i=0;i!=textVec.size();++i){
        cout<<textVec[i]<<" ";
        if(i%8==7){
            cout<<endl;
        }
    }
    cout<<endl;
    return 0;
}
