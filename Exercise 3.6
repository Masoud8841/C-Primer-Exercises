#include <iostream>
using std::cout;
using std::cin;
using std::endl;
using std::string;
using std::getline;

int main(){
    string line;
    string word;
    cout<< "enter a line" << endl;
    getline(cin,line);
    cout<< "enter a word" << endl;
    cin >> word;
    cout<< line.size() << " , " << line << endl;
    cout<< word.size() << " , " << word << endl;
    return 0;
}
