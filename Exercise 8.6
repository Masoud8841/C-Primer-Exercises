#include <iostream>
#include <fstream>
#include <string>
#include <vector>
using std::cout;
using std::cin;
using std::endl;
using std::string;
using std::vector;
using std::istream;
using std::ifstream;

istream &readFun(istream &);

int main(){
    ifstream infile;
    infile.open("Sales_item_7_32.cpp");
    readFun(infile);
    infile.close();
    infile.clear();
    if(infile.eof()){
        cout<<"EOF flag is set!"<<endl;
    }
    else{
        cout<<"EOF flag is clear!" << endl;
    }
    return 0;
}

istream &readFun(istream &istm){
    vector<string> svec;
    string line;
    do{
        getline(istm,line);
        svec.push_back(line);
    }
    while(!istm.eof());
    for(vector<string>::size_type i=0;i!=svec.size();++i){
        cout<< svec[i]<< endl;
    }
    istm.clear(~istream::eofbit);
    return istm;
};
