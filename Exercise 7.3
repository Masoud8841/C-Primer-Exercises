double power_cal_p(int a, int b){
    if(a==0 && b==0){
        std::cerr << "zero to the power of zero is undefined!"<<endl;
        return 0;
    }
    else if(a==0){
        return 0;
    }
    else if(b==0){
        return 1;
    }

    int sign_val1=1, sign_val2=1;
    if(a<0){
        sign_val1=-1;
        a=-a;
    }
    if(b<0){
        sign_val2=-1;
        b=-b;
    }
    double cal_val=1;
    for(int i=0; i<b;++i){
        cal_val*=a;
    }
    if(sign_val2<0){
        cal_val=1/cal_val;
    }
    return sign_val1*cal_val;
}
