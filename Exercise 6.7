#include <iostream>
#include <string>
#include <vector>
using std::cout;
using std::cin;
using std::endl;
using std::string;
using std::vector;

int main(){
    string someTxt, line;
    cout << "enter some text" << endl;
    while(getline(cin,line)){
        someTxt+='\n'+line;
    }
    int vowelCnt=0;
    for(string::size_type i=0; i!=someTxt.size(); i++){
        switch (tolower(someTxt[i]))
        {
        case 'a':
        case 'e':
        case 'i':
        case 'o':
        case 'u':
            ++vowelCnt;
            break;
        default:
            break;
        }
    }
    cout<< "Your text has " << vowelCnt <<" number of vowels!" << endl;
    return 0;
}
